#include<iostream> // header file
using namespace std;
int main()
{
    int i,j,n;
    cout<<"Enter number of rows you want to print :"; // Asking for input
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;++j)
        {
            cout<<j;
        }
        for(j=n-i;j>=1;--j)
        {
            cout<<" ";
        }
        for(j=n-i;j>=1;--j)
        {
            cout<<" ";
        }
        for(j=i;j>=1;j--)
        {
            cout<<j;
        }
        cout<<"\n";
    }
    return 0;
}
